<?xml version="1.0" encoding="utf-8"?>
<!--
    HCI DESIGN PRINCIPLE:
    This pill shape uses semi-transparency (30% white) to allow the emergency
    red background to remain visible while creating a clear, high-contrast
    container for the instructional text.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Semi-transparent white background (#4D is approx 30% alpha) -->
    <solid android:color="#4DFFFFFF" />

    <!-- Fully rounded corners to create the 'pill' effect -->
    <corners android:radius="100dp" />

</shape>