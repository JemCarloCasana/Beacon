<?xml version="1.0" encoding="utf-8"?>
<!--
    HCI DESIGN PRINCIPLES APPLIED:
    1. Visual Hierarchy: SOS button remains the focal point.
    2. Feedback: 'Hold for 3 seconds' text is inside a pill shape.
    3. Affordance: Buttons placed for thumb reach.
    4. Safety Guardrail: Logout is at the bottom.
-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_safe"
    tools:context=".home.HomeFragment">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_above="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Header Section -->
            <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good morning"
                        android:textColor="#88A0A0"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Stay safe, Student!"
                        android:textColor="#0F2D37"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnProfileHeader"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_background_light"
                    android:contentDescription="View Profile"
                    android:padding="12dp"
                    android:src="@drawable/ic_person"
                    app:tint="#475569" />
            </RelativeLayout>

            <!-- SOS Button -->
            <FrameLayout
                android:id="@+id/sosContainer"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_sos_gradient" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="SOS"
                        android:textColor="#FFFFFF"
                        android:textSize="64sp" />

                    <TextView
                        android:id="@+id/tvHoldInstruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/pill_transparent_white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp"
                        android:text="Hold for 3 seconds"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tvInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Emergency? Tap and hold"
                android:textColor="#7C9292"
                android:textSize="16sp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:paddingHorizontal="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckIn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:backgroundTint="#5FB2B2"
                    android:text="I'm Safe / Check-in"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_check_circle"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="#FFFFFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContacts"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#F2C07D"
                    android:text="Emergency Contacts"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_phone"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="#000000" />
            </LinearLayout>

            <!-- Location Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/locationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#F3E8FF"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <View
                        android:id="@+id/vIndicatorLarge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_background_green" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/vIndicatorLarge"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvLocationTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Location Active"
                            android:textColor="#0F172A"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLocationSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sharing with 3 contacts"
                            android:textColor="#64748B"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/status_indicator_small"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/status_indicator_green" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Logout -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="Logout"
                android:textColor="#94A3B8"
                app:icon="@drawable/ic_logout"
                app:iconTint="#94A3B8" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:elevation="16dp"
        app:itemIconTint="@color/nav_item_selector"
        app:itemTextColor="@color/nav_item_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
